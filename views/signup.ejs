<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Sign Up</title>
</head>
<body data-bs-theme="dark">
    <%- include('./partials/navbar/navbar') %>
    <div class="container mt-4">
      <form action="/users/signup" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <div class="d-flex justify-content-center mb-4">
            <img id="frame" src="https://mdbootstrap.com/img/Photos/Others/placeholder-avatar.jpg"
            class="rounded-circle" style="width: 200px; height: 200px; object-fit: cover;" alt="example placeholder" />
        </div>
      <div class="mb-3">
        <label for="coverImage" class="form-label">Profile Image</label>
        <input type="file" class="form-control" id="profileImage" name="profileImage" aria-describedby="profileImage" onchange="preview(event)" />
      </div>

          <label for="fullName" class="form-label">Full Name</label>
          <input
            type="text"
            class="form-control"
            id="fullName"
            name="fullName"
            aria-describedby="fullName"
          /> 
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"
            >Email address</label
          >
          <input
            type="email"
            name="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
          />
          <div id="emailHelp" class="form-text">
            We'll never share your email with anyone else.
          </div>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input
            name="password"
            type="password"
            class="form-control"
            id="exampleInputPassword1"
          />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <script>
      function preview(event){
        frame.src = URL.createObjectURL(event.target.files[0]);
      }
    </script>
    <%- include('./partials/script') %>
</body>
</html>